@model mac.Models.Departement

@{
    ViewData["Title"] = "Créer un Département";
}

<div class="page-header">
    <div>
        <h2>
            <i class="bi bi-plus-circle me-2"></i>Créer un Nouveau Département
        </h2>
        <p>Ajoutez un nouveau département à votre organisation</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i> Retour
    </a>
</div>

<div class="row">
    <div class="col-lg-8 col-xl-6">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-building me-2"></i>Informations du Département</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Nom" class="form-label">
                            <i class="bi bi-building me-2"></i>Nom du Département
                        </label>
                        <input asp-for="Nom" class="form-control" placeholder="Ex: Ressources Humaines, Informatique, Marketing..." />
                        <span asp-validation-for="Nom" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i> Créer le Département
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
