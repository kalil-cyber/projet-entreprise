@model mac.Models.Departement

@{
    ViewData["Title"] = "Supprimer le Département";
}

<div class="page-header">
    <div>
        <h2 class="text-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>Supprimer le Département
        </h2>
        <p>Cette action est irréversible</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i> Retour
    </a>
</div>

@if (Model.Salaries.Any())
{
    <div class="alert alert-danger mb-4" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>Attention !</strong> Ce département contient <strong>@Model.Salaries.Count</strong> salarié(s). 
        La suppression n'est pas recommandée.
    </div>
}
else
{
    <div class="alert alert-warning mb-4" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i> Êtes-vous sûr de vouloir supprimer ce département ? Cette action est irréversible.
    </div>
}

<div class="row">
    <div class="col-lg-8 col-xl-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-trash me-2"></i>Confirmation de Suppression</h5>
            </div>
            <div class="card-body">
                <div class="info-box">
                    <label>Nom du Département</label>
                    <div class="value">@Model.Nom</div>
                </div>
                
                <div class="info-box">
                    <label>Nombre de Salariés</label>
                    <div>
                        <span class="badge bg-primary fs-6">@Model.Salaries.Count</span>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger" @(Model.Salaries.Any() ? "disabled" : "")>
                            <i class="bi bi-trash me-2"></i> Supprimer définitivement
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
