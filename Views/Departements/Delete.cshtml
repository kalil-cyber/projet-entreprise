@model mac.Models.Departement

@{
    ViewData["Title"] = "Supprimer le Département";
}

<!-- Messages de notification -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show animate-slide-in-left mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>Erreur !</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="page-header animate-fade-in">
    <div>
        <h2 class="text-danger">
            <i class="bi bi-exclamation-triangle me-2" style="animation: pulse 2s infinite;"></i>Supprimer le Département
        </h2>
        <p class="text-muted">Cette action est irréversible</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary hover-lift">
        <i class="bi bi-arrow-left me-2"></i> Retour
    </a>
</div>

@if (Model.Salaries.Any())
{
    <div class="alert alert-danger alert-modern mb-4 animate-slide-in-left" role="alert" style="border-left: 4px solid #dc3545;">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
            <div>
                <strong class="d-block mb-1">⚠️ Attention !</strong>
                <span>Ce département contient <strong class="badge bg-danger">@Model.Salaries.Count</strong> salarié(s). La suppression n'est pas recommandée car elle affectera tous les salariés associés.</span>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning alert-modern mb-4 animate-slide-in-left" role="alert" style="border-left: 4px solid #ffc107;">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
            <div>
                <strong class="d-block mb-1">⚠️ Confirmation requise</strong>
                <span>Êtes-vous sûr de vouloir supprimer ce département ? Cette action est <strong>irréversible</strong>.</span>
            </div>
        </div>
    </div>
}

<div class="row animate-fade-in-up">
    <div class="col-lg-8 col-xl-6">
        <div class="card border-danger shadow-lg hover-lift" style="border-width: 2px;">
            <div class="card-header text-white" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <h5 class="mb-0">
                    <i class="bi bi-trash-fill me-2"></i>Confirmation de Suppression
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="info-box mb-3 animate-fade-in" style="animation-delay: 0.1s;">
                    <label class="d-flex align-items-center mb-2">
                        <i class="bi bi-building me-2 text-primary"></i>Nom du Département
                    </label>
                    <div class="value fs-5 fw-bold text-primary">@Model.Nom</div>
                </div>
                
                <div class="info-box mb-4 animate-fade-in" style="animation-delay: 0.2s;">
                    <label class="d-flex align-items-center mb-2">
                        <i class="bi bi-people me-2 text-info"></i>Nombre de Salariés
                    </label>
                    <div>
                        <span class="badge bg-primary fs-5 px-3 py-2">@Model.Salaries.Count</span>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2 flex-wrap">
                        <button type="submit" class="btn btn-danger btn-modern hover-lift" @(Model.Salaries.Any() ? "disabled" : "") style="min-width: 200px;">
                            <span>
                                <i class="bi bi-trash-fill me-2"></i> Supprimer définitivement
                            </span>
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-modern hover-lift">
                            <span>
                                <i class="bi bi-x-circle me-2"></i> Annuler
                            </span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
