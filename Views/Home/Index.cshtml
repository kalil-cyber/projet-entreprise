@{
    ViewData["Title"] = "Accueil";
    var stats = ViewBag.Stats as dynamic;
}

<!-- Hero Section Centré et Moderne -->
<div class="hero-home text-center mb-5 py-5">
    <div class="hero-content">
        <div class="hero-icon mb-4">
            <i class="bi bi-building-fill"></i>
        </div>
        <h1 class="display-3 fw-bold mb-3 text-white">Système de Gestion d'Entreprise</h1>
        <p class="lead mb-4 text-white-50" style="font-size: 1.3rem;">
            Gérez efficacement vos départements, salariés et projets avec une interface moderne et intuitive
        </p>
        <div class="hero-badges mb-4">
            <span class="badge bg-light text-dark px-3 py-2 me-2">
                <i class="bi bi-check-circle-fill text-success me-1"></i>Application Fonctionnelle
            </span>
            <span class="badge bg-light text-dark px-3 py-2 me-2">
                <i class="bi bi-shield-check text-primary me-1"></i>Sécurisée
            </span>
            <span class="badge bg-light text-dark px-3 py-2">
                <i class="bi bi-lightning-charge text-warning me-1"></i>Performante
            </span>
        </div>
        <div class="hero-actions">
            <a href="/Departements" class="btn btn-light btn-lg me-2 px-4 py-3">
                <i class="bi bi-rocket-takeoff me-2"></i>Commencer
            </a>
            <a href="#stats" class="btn btn-outline-light btn-lg px-4 py-3">
                <i class="bi bi-graph-up me-2"></i>Voir les Statistiques
            </a>
        </div>
    </div>
</div>


<!-- Section Statistiques Centrées -->
@if (stats != null)
{
    <section id="stats" class="mb-5">
        <div class="text-center mb-4">
            <h2 class="h2 fw-bold mb-2">Statistiques en Temps Réel</h2>
            <p class="text-muted">Vue d'ensemble de votre entreprise</p>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card stats-card text-center border-0 shadow-lg h-100" style="border-top: 5px solid #667eea !important;">
                    <div class="card-body p-4">
                        <div class="stats-icon-wrapper mb-3">
                            <div class="stats-icon-circle" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="bi bi-diagram-3 text-white" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                        <div class="stats-number h1 fw-bold mb-2" style="color: #667eea;">@stats.TotalDepartements</div>
                        <div class="stats-label text-muted text-uppercase fw-semibold small">Départements</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card stats-card text-center border-0 shadow-lg h-100" style="border-top: 5px solid #10b981 !important;">
                    <div class="card-body p-4">
                        <div class="stats-icon-wrapper mb-3">
                            <div class="stats-icon-circle" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                                <i class="bi bi-people text-white" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                        <div class="stats-number h1 fw-bold mb-2" style="color: #10b981;">@stats.TotalSalaries</div>
                        <div class="stats-label text-muted text-uppercase fw-semibold small">Salariés</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card stats-card text-center border-0 shadow-lg h-100" style="border-top: 5px solid #f59e0b !important;">
                    <div class="card-body p-4">
                        <div class="stats-icon-wrapper mb-3">
                            <div class="stats-icon-circle" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                                <i class="bi bi-folder text-white" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                        <div class="stats-number h1 fw-bold mb-2" style="color: #f59e0b;">@stats.TotalProjets</div>
                        <div class="stats-label text-muted text-uppercase fw-semibold small">Projets</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card stats-card text-center border-0 shadow-lg h-100" style="border-top: 5px solid #06b6d4 !important;">
                    <div class="card-body p-4">
                        <div class="stats-icon-wrapper mb-3">
                            <div class="stats-icon-circle" style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);">
                                <i class="bi bi-cash-coin text-white" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                        <div class="stats-number h4 fw-bold mb-2" style="color: #06b6d4;">@(stats.SalaireMoyen > 0 ? string.Format("{0:C}", stats.SalaireMoyen) : "N/A")</div>
                        <div class="stats-label text-muted text-uppercase fw-semibold small">Salaire Moyen</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- Section Fonctionnalités Centrées -->
<section id="features" class="mb-5">
    <div class="text-center mb-5">
        <h2 class="h2 fw-bold mb-2">Fonctionnalités Principales</h2>
        <p class="text-muted lead">Découvrez les outils puissants pour gérer votre entreprise</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-lg-4 col-md-6">
            <div class="card feature-card h-100 border-0 shadow-lg text-center">
                <div class="card-body p-5">
                    <div class="feature-icon-large mb-4">
                        <div class="feature-icon-circle" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="bi bi-diagram-3 text-white" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <h3 class="h4 fw-bold mb-3">Gestion des Départements</h3>
                    <p class="text-muted mb-4">
                        Organisez votre entreprise par départements avec une gestion claire, intuitive et efficace.
                    </p>
                    <a href="/Departements" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-arrow-right me-2"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card feature-card h-100 border-0 shadow-lg text-center">
                <div class="card-body p-5">
                    <div class="feature-icon-large mb-4">
                        <div class="feature-icon-circle" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                            <i class="bi bi-people text-white" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <h3 class="h4 fw-bold mb-3">Gestion des Salariés</h3>
                    <p class="text-muted mb-4">
                        Gérez les informations de vos employés, leurs salaires, leurs affectations et bien plus.
                    </p>
                    <a href="/Salaries" class="btn btn-success btn-lg px-4">
                        <i class="bi bi-arrow-right me-2"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card feature-card h-100 border-0 shadow-lg text-center">
                <div class="card-body p-5">
                    <div class="feature-icon-large mb-4">
                        <div class="feature-icon-circle" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                            <i class="bi bi-folder text-white" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <h3 class="h4 fw-bold mb-3">Gestion des Projets</h3>
                    <p class="text-muted mb-4">
                        Suivez l'avancement de vos projets avec des dates précises et un suivi en temps réel.
                    </p>
                    <a href="/Projets" class="btn btn-warning btn-lg px-4">
                        <i class="bi bi-arrow-right me-2"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section À Propos Centrée -->
