@model mac.Models.Projet

@{
    ViewData["Title"] = "Supprimer le Projet";
    var isEnCours = Model.DateDebut <= DateTime.Now && Model.DateFin >= DateTime.Now;
}

<div class="page-header animate-fade-in">
    <div>
        <h2 class="text-danger">
            <i class="bi bi-exclamation-triangle me-2" style="animation: pulse 2s infinite;"></i>Supprimer le Projet
        </h2>
        <p class="text-muted">Cette action est irréversible</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary hover-lift">
        <i class="bi bi-arrow-left me-2"></i> Retour
    </a>
</div>

@if (isEnCours)
{
    <div class="alert alert-danger alert-modern mb-4 animate-slide-in-left" role="alert" style="border-left: 4px solid #dc3545;">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
            <div>
                <strong class="d-block mb-1">⚠️ Projet en cours !</strong>
                <span>Ce projet est actuellement <strong class="badge bg-danger">en cours</strong>. La suppression n'est pas recommandée.</span>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning alert-modern mb-4 animate-slide-in-left" role="alert" style="border-left: 4px solid #ffc107;">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
            <div>
                <strong class="d-block mb-1">⚠️ Confirmation requise</strong>
                <span>Êtes-vous sûr de vouloir supprimer ce projet ? Cette action est <strong>irréversible</strong>.</span>
            </div>
        </div>
    </div>
}

<div class="row animate-fade-in-up">
    <div class="col-lg-8 col-xl-6">
        <div class="card border-danger shadow-lg hover-lift" style="border-width: 2px;">
            <div class="card-header text-white" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <h5 class="mb-0">
                    <i class="bi bi-trash-fill me-2"></i>Confirmation de Suppression
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="info-box mb-3 animate-fade-in" style="animation-delay: 0.1s;">
                    <label class="d-flex align-items-center mb-2">
                        <i class="bi bi-folder me-2 text-primary"></i>Nom du Projet
                    </label>
                    <div class="value fs-5 fw-bold text-primary">@Model.Nom</div>
                </div>
                
                <div class="info-box mb-3 animate-fade-in" style="animation-delay: 0.2s;">
                    <label class="d-flex align-items-center mb-2">
                        <i class="bi bi-file-text me-2 text-info"></i>Description
                    </label>
                    <div class="p-3 bg-light rounded" style="border-left: 3px solid #0dcaf0;">
                        @(Model.Description ?? "<span class='text-muted fst-italic'>Aucune description</span>")
                    </div>
                </div>
                
                <div class="row g-3 mb-4">
                    <div class="col-md-6 animate-fade-in" style="animation-delay: 0.3s;">
                        <div class="info-box">
                            <label class="d-flex align-items-center mb-2">
                                <i class="bi bi-calendar-event me-2 text-success"></i>Date de Début
                            </label>
                            <div>
                                <span class="badge bg-success fs-6 px-3 py-2">@Model.DateDebut.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 animate-fade-in" style="animation-delay: 0.4s;">
                        <div class="info-box">
                            <label class="d-flex align-items-center mb-2">
                                <i class="bi bi-calendar-check me-2 text-warning"></i>Date de Fin
                            </label>
                            <div>
                                <span class="badge bg-warning text-dark fs-6 px-3 py-2">@Model.DateFin.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 animate-fade-in" style="animation-delay: 0.5s;">
                        <div class="info-box">
                            <label class="d-flex align-items-center mb-2">
                                <i class="bi bi-info-circle me-2 text-info"></i>Statut
                            </label>
                            <div>
                                @if (isEnCours)
                                {
                                    <span class="badge bg-danger fs-6 px-3 py-2">
                                        <i class="bi bi-play-circle me-1"></i>En cours
                                    </span>
                                }
                                else if (Model.DateFin < DateTime.Now)
                                {
                                    <span class="badge bg-secondary fs-6 px-3 py-2">
                                        <i class="bi bi-check-circle me-1"></i>Terminé
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-primary fs-6 px-3 py-2">
                                        <i class="bi bi-clock me-1"></i>À venir
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2 flex-wrap">
                        <button type="submit" class="btn btn-danger btn-modern hover-lift" style="min-width: 200px;">
                            <span>
                                <i class="bi bi-trash-fill me-2"></i> Supprimer définitivement
                            </span>
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-modern hover-lift">
                            <span>
                                <i class="bi bi-x-circle me-2"></i> Annuler
                            </span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
