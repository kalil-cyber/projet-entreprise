@model mac.Models.Projet

@{
    ViewData["Title"] = "Supprimer le Projet";
}

<div class="page-header">
    <div>
        <h2 class="text-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>Supprimer le Projet
        </h2>
        <p>Cette action est irréversible</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i> Retour
    </a>
</div>

<div class="alert alert-warning mb-4" role="alert">
    <i class="bi bi-exclamation-triangle me-2"></i> Êtes-vous sûr de vouloir supprimer ce projet ? Cette action est irréversible.
</div>

<div class="row">
    <div class="col-lg-8 col-xl-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-trash me-2"></i>Confirmation de Suppression</h5>
            </div>
            <div class="card-body">
                <div class="info-box">
                    <label>Nom du Projet</label>
                    <div class="value">@Model.Nom</div>
                </div>
                
                <div class="info-box">
                    <label>Description</label>
                    <div class="p-2 bg-light rounded small">
                        @(Model.Description ?? "Aucune description")
                    </div>
                </div>
                
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="info-box">
                            <label>Date de Début</label>
                            <div>@Model.DateDebut.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <label>Date de Fin</label>
                            <div>@Model.DateFin.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i> Supprimer définitivement
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
