@model mac.Models.Projet

@{
    ViewData["Title"] = "Détails du Projet";
}

<div class="page-header">
    <div>
        <h2>
            <i class="bi bi-folder me-2"></i>Détails du Projet
        </h2>
        <p>Informations complètes sur le projet</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil me-2"></i> Modifier
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i> Retour
        </a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informations Générales</h5>
            </div>
            <div class="card-body">
                <div class="info-box">
                    <label>Nom du Projet</label>
                    <div class="value" style="font-size: 1.5rem;">@Model.Nom</div>
                </div>
                
                <div class="info-box">
                    <label>Description</label>
                    <div class="p-3 bg-light rounded">
                        @(Model.Description ?? "Aucune description")
                    </div>
                </div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-box">
                            <label>Date de Début</label>
                            <div>
                                <span class="badge bg-info fs-6">@Model.DateDebut.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <label>Date de Fin</label>
                            <div>
                                <span class="badge bg-success fs-6">@Model.DateFin.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <label>Durée</label>
                            <div>
                                @{
                                    var duree = (Model.DateFin - Model.DateDebut).Days;
                                }
                                <span class="badge bg-primary fs-6">@duree jours</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <label>Créé le</label>
                            <div class="fw-semibold">@Model.CreatedAt.ToString("dd/MM/yyyy à HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
