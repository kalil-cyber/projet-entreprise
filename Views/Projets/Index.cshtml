@model IEnumerable<mac.Models.Projet>

@{
    ViewData["Title"] = "Liste des Projets";
}

<!-- Messages de notification -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show animate-slide-in-left" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <strong>Succès !</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show animate-slide-in-left" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>Erreur !</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Header harmonisé -->
<div class="page-header">
    <div>
        <h2 class="d-flex align-items-center gap-2">
            <span class="badge bg-warning p-2 rounded">
                <i class="bi bi-folder text-white"></i>
            </span>
            Projets
        </h2>
        <p>Suivez l'avancement de vos projets</p>
    </div>
    <a asp-action="Create" class="btn btn-warning">
        <i class="bi bi-plus-circle me-2"></i>
        Nouveau Projet
    </a>
</div>

@if (Model.Any())
{
    <!-- Table Bootstrap -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Nom du Projet</th>
                            <th>Description</th>
                            <th>Date Début</th>
                            <th>Date Fin</th>
                            <th>Durée</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var duree = (item.DateFin - item.DateDebut).Days;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                            <i class="bi bi-folder-fill"></i>
                                        </div>
                                        <strong>@item.Nom</strong>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-truncate-2 d-inline-block" style="max-width: 200px;" title="@(item.Description ?? "Aucune description")">
                                        @(item.Description ?? "Aucune description")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.DateDebut.ToString("dd/MM/yyyy")</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">@item.DateFin.ToString("dd/MM/yyyy")</span>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@duree jours</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <div class="mb-3">
                <i class="bi bi-folder text-muted" style="font-size: 4rem;"></i>
            </div>
            <h3 class="h5 fw-bold mb-2">Aucun projet enregistré</h3>
            <p class="text-muted mb-4">Commencez par créer votre premier projet pour suivre son avancement.</p>
            <a asp-action="Create" class="btn btn-warning">
                <i class="bi bi-plus-circle me-2"></i>
                Créer le premier projet
            </a>
        </div>
    </div>
}
