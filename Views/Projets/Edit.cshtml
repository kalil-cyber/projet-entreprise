@model mac.Models.Projet

@{
    ViewData["Title"] = "Modifier le Projet";
}

<div class="page-header">
    <div>
        <h2>
            <i class="bi bi-pencil me-2"></i>Modifier le Projet
        </h2>
        <p>Modifiez les informations du projet</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i> Retour
    </a>
</div>

<div class="row">
    <div class="col-lg-8 col-xl-7">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-folder me-2"></i>Informations du Projet</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Nom" class="form-label">
                            <i class="bi bi-folder me-2"></i>Nom du Projet
                        </label>
                        <input asp-for="Nom" class="form-control" />
                        <span asp-validation-for="Nom" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            <i class="bi bi-file-text me-2"></i>Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateDebut" class="form-label">
                                <i class="bi bi-calendar-event me-2"></i>Date de DÃ©but
                            </label>
                            <input asp-for="DateDebut" type="date" class="form-control" />
                            <span asp-validation-for="DateDebut" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateFin" class="form-label">
                                <i class="bi bi-calendar-check me-2"></i>Date de Fin
                            </label>
                            <input asp-for="DateFin" type="date" class="form-control" />
                            <span asp-validation-for="DateFin" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle me-2"></i> Enregistrer les modifications
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
