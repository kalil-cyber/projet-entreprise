@model mac.Models.Salarie

@{
    ViewData["Title"] = "Supprimer le Salarié";
}

<div class="page-header animate-fade-in">
    <div>
        <h2 class="text-danger">
            <i class="bi bi-exclamation-triangle me-2" style="animation: pulse 2s infinite;"></i>Supprimer le Salarié
        </h2>
        <p class="text-muted">Cette action est irréversible</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary hover-lift">
        <i class="bi bi-arrow-left me-2"></i> Retour
    </a>
</div>

<div class="alert alert-warning alert-modern mb-4 animate-slide-in-left" role="alert" style="border-left: 4px solid #ffc107;">
    <div class="d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
        <div>
            <strong class="d-block mb-1">⚠️ Confirmation requise</strong>
            <span>Êtes-vous sûr de vouloir supprimer ce salarié ? Cette action est <strong>irréversible</strong>.</span>
        </div>
    </div>
</div>

<div class="row animate-fade-in-up">
    <div class="col-lg-8 col-xl-6">
        <div class="card border-danger shadow-lg hover-lift" style="border-width: 2px;">
            <div class="card-header text-white" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <h5 class="mb-0">
                    <i class="bi bi-trash-fill me-2"></i>Confirmation de Suppression
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row g-3 mb-4">
                    <div class="col-md-6 animate-fade-in" style="animation-delay: 0.1s;">
                        <div class="info-box">
                            <label class="d-flex align-items-center mb-2">
                                <i class="bi bi-person me-2 text-primary"></i>Nom
                            </label>
                            <div class="value fs-5 fw-bold">@Model.Nom</div>
                        </div>
                    </div>
                    <div class="col-md-6 animate-fade-in" style="animation-delay: 0.2s;">
                        <div class="info-box">
                            <label class="d-flex align-items-center mb-2">
                                <i class="bi bi-person-badge me-2 text-primary"></i>Prénom
                            </label>
                            <div class="value fs-5 fw-bold">@Model.Prenom</div>
                        </div>
                    </div>
                    <div class="col-md-6 animate-fade-in" style="animation-delay: 0.3s;">
                        <div class="info-box">
                            <label class="d-flex align-items-center mb-2">
                                <i class="bi bi-calendar me-2 text-info"></i>Âge
                            </label>
                            <div class="value">
                                <span class="badge bg-info fs-6">@Model.Age ans</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 animate-fade-in" style="animation-delay: 0.4s;">
                        <div class="info-box">
                            <label class="d-flex align-items-center mb-2">
                                <i class="bi bi-cash-coin me-2 text-success"></i>Salaire
                            </label>
                            <div>
                                <span class="badge bg-success fs-5 px-3 py-2">@Model.Salaire.ToString("C")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 animate-fade-in" style="animation-delay: 0.5s;">
                        <div class="info-box">
                            <label class="d-flex align-items-center mb-2">
                                <i class="bi bi-building me-2 text-primary"></i>Département
                            </label>
                            <div>
                                @if (Model.Departement != null)
                                {
                                    <span class="badge bg-primary fs-6 px-3 py-2">@Model.Departement.Nom</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Aucun département assigné</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2 flex-wrap">
                        <button type="submit" class="btn btn-danger btn-modern hover-lift" style="min-width: 200px;">
                            <span>
                                <i class="bi bi-trash-fill me-2"></i> Supprimer définitivement
                            </span>
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-modern hover-lift">
                            <span>
                                <i class="bi bi-x-circle me-2"></i> Annuler
                            </span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
